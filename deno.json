{
  "lock": false,
  "name": "kall",
  "source": "https://github.com/olaven/kall",
  "author": "Olav Sundf√∏r <olav@sundfoer.com>",
  "tasks": {
    "test": "deno test --allow-net",
    "check": "deno fmt --check && deno lint && deno check **/*.ts"
  },
  "imports": {
    "$std/": "https://deno.land/std@0.221.0/"
  },
  "fmt": {
    "exclude": [
      "**/*.md",
      "**/*.json"
    ],
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "exclude": [
    ".vscode/",
    ".devcontainer"
  ]
}